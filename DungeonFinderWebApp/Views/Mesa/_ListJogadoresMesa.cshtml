@model List<DungeonFinderWebApp.Domain.Models.Entities.Jogador>

<h3 class="card-title">Jogadores Na Mesa</h3>
@foreach(var jogador in Model)
{
   <div class="card mb-3" style="max-width: 330px; max-height: 150px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="https://i.pinimg.com/474x/72/b4/7a/72b47ac4042630f3eace537c93537670.jpg" class="img-fluid rounded-start" alt="..." >
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">@jogador.Nome</h5>
            <p class="card-text text-muted">@jogador.Email</p>
          </div>
        </div>
      </div>
   </div> 
}
