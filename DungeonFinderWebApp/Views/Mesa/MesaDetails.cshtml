@model DungeonFinderWebApp.Domain.Models.Response.MesaResponse
@{    
    ViewData["Title"] = $"{Model.Nome} Detalhes";     
} 

<div class="conteudo">
    <div class="card mb-3">
        <img src="https://tm.ibxk.com.br/2022/04/14/14125007305279.jpg?ims=1200x675" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">@Model.Nome</h5>
          <p class="card-text"><em>@Model.Descricao</em></p>
          <i class="fa fa-users"> </i><strong> @Model.QtdJogadores/@Model.QtdMaxJogadores</strong> 
          <p class="card-text"><small class="text-muted">Mestre: @(Model.IdMestre == Convert.ToInt32(User.FindFirst("JogadorId").Value) ? "Você" : @Model.Mestre) --</small>  <small class="text-muted">Sistema: @Model.Sistema</small></p>
          

          <div class="d-grid gap-2 d-md-block">
              @if(Model.IdMestre == Convert.ToInt32(User.FindFirst("JogadorId").Value))
              {
                    <button class="btn btn-primary" type="button">Editar Mesa</button>
                }
                else
                {
                    if(Model.QtdJogadores == Model.QtdMaxJogadores)
                    {
                        <button class="btn btn-primary" type="button">Mesa Lotada</button>
                    }
                    else
                    {
                        <button class="btn btn-primary" type="button">Participar</button>
                    }
                }
            
          </div>
        </div>
      </div>
</div>